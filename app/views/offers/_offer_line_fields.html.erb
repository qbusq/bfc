<div class="nested-fields form-row">
  <% if @offer.to_user %>
    <div class="form-group col-md-2 justify-content-center">
      <%= f.association :target_offer_line, collection: OfferLine.where(offer_id: @offer.offer_request_id), label: false, :label_method => lambda { |target_offer_line| "#{target_offer_line.product.name_display}"} %>
    </div>
    <div class="form-group col-md-1 justify-content-center">
      <%= f.input :alternative_to_target, label: 'alt' %>
    </div>

    <div class="form-group col-md-2 justify-content-center">
      <%= f.number_field :quantity_in_tons, placeholder: "desired quantity",  min: 0, step: 0.5 %>
      <%= "tons" %>
    </div>
    <div class="form-group col-md-4 justify-content-center">
      <%= f.association :product, label: false, label_method: :name_display  %>
    </div>
    <div class="form-group col-md-2 justify-content-center">
      <%= f.number_field :price, min: 0, step: 0.001 %>
      <%= "EUR/kg" %>
    </div>
    <div class="form-group col-md-1 justify-content-center">
      <%= link_to_remove_association "Remove product", f %>
    </div>
    <%= f.hidden_field :offer_id, value: @offer.id %>

  <% else %>
    <div class="form-group col-md-3 justify-content-center">
      <%= f.number_field :quantity_in_tons, min: 0, step: 0.5 %>
      <%= "tons" %>
    </div>
    <div class="form-group col-md-6 justify-content-center">
      <%= f.association :product, prompt: "select product", label: false, collection: Product.where(user: current_user).order(prod_category_id: :asc), data: { placeholder: 'Select product'}, label_method: :name_display  %>
    </div>
    <div class="form-group col-md-3 justify-content-center">
      <%= link_to_remove_association "Remove product", f %>
    </div>
    <%= f.hidden_field :offer_id, value: @offer.id %>
    <%= f.hidden_field :target_offer_line_id, value: params[:id] %>

  <% end %>
</div>
