<div class="container">
  <h1>Offers</h1>
  <h2>Offers responding to my offer requests</h2>
    <% @offers.each do |offer| %>
      <% unless offer.offer_request_id == nil || offer.status == "accepted" %>
        <div class="card-user">
          <p><%= link_to offer.title, offer_path(offer) %></p>
          <p><i class="far fa-chart-bar"></i> <%= link_to "Compare to other offers of #{offer.offer_request.title}",  compare_chart_path(offer) %></p>
        </div>
      <% end %>
    <% end %>
  <br>
  <h2> Spontaneous offers</h2>
    <% @offers.each do |offer| %>
      <% unless offer.offer_request_id != nil || offer.status == "accepted" %>
        <div class="card-user">
          <p><%= link_to offer.title, offer_path(offer) %></p>
        </div>
      <% end %>
    <% end %>
  <br>
  <h2>Offers pending confirmation</h2>
    <% @offers.each do |offer| %>
      <% if offer.status == "accepted" %>
        <div class="card-user">
          <p><%= link_to offer.title, offer_path(offer) %></p>
        </div>
      <% end %>
    <% end %>
  <br>
</div>
