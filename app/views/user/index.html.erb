<div class="container">
  <div>
    <h1>Search all available products</h1>
    <form id="search-box">
      <div class="row">
        <div class="col">
          <input type="text" class="form-control" placeholder="Product category">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Location">
        </div>
        <div>
          <button type="submit" class="btn btn-outline-primary">Find products</button>
        </div>
      </div>
    </form>
  </div>
  <div class="user-container">
    <div class="user-info">
      <% @users.each do |user| %>
        <% unless user.products.empty? %>
          <% if user.seller? %>
            <div class="user-info-details">
              <div class="user-info-details-text">
                <h2>Producer: <%= user.company_name %></h2>
                <p>Address: <%= user.address %>, <%= user.country %></p>
                <p><b><i class="fas fa-shopping-cart"></i> <%= link_to "Request an offer" ,new_offer_path(user) %></b></p>
              </div>
              <div class="cards">
                <% user.products.each do |product| %>
                  <%= render "products/products_cards_in_index", product: product %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div
    id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  </div>
</div>
